 ELSE IF (d == 0) THEN 
      x1=x2= -b/2a
      OUTPUT "ROOT 1:"+x1
      OUTPUT "ROOT 2:"+x2
ELSE
    OUTPUT "There is no real root"
ENDIF 
END



