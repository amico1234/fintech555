// function to check if attribute/cond is in its valid time/date


FUNCTION linearSearch(list, searchTerm):
    FOR index FROM 0 -> length(list):
        IF list[index] == searchTerm THEN
            RETURN index
        ENDIF
    ENDLOOP
           RETURN -1
END FUNCTION 


